{
  "name": "email-marketing-tool",
  "version": "1.0.0",
  "description": "FES Email Marketing Tool - Desktop application for email marketing campaigns",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "set NODE_ENV=production && electron-builder",
    "build:win": "set NODE_ENV=production && electron-builder --win",
    "build:mac": "set NODE_ENV=production && electron-builder --mac",
    "build:linux": "set NODE_ENV=production && electron-builder --linux",
    "package": "npm run build:win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "email",
    "marketing",
    "electron",
    "desktop"
  ],
  "author": "FES Team",
  "license": "ISC",
  "build": {
    "appId": "com.fes.emailmarketingtool",
    "productName": "FES Email Marketing Tool",
    "win": {
      "target": "nsis",
      "icon": "assets/logo.jpg"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.jpg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "app/backend",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "lucide": "^0.555.0"
  }
}